[build-system]
requires = [
    "wheel",
    "setuptools>=50.3.2",
    "setuptools_scm[toml]>=3.4",
]
build-backend = "setuptools.build_meta"

[tool.setuptools_scm]
write_to = "src/{{ namespaced_package_path }}/version.py"
write_to_template = "__version__ = \"{version}\""

[project]
name = "{{ package_namespace_pkg }}{{ project_name }}"
description = "{{ summary }}"
authors = [
    {name = "{{ author }}", email = "{{ author_email }}"},
]
keywords = [
    "salt-extension",
]
license = {text = "{{ license_name }}"}
classifiers = [
    "Programming Language :: Python",
    "Programming Language :: Cython",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3 :: Only",
{%- for i in range(python_requires[1], max_python_minor + 1) %}
    "Programming Language :: Python :: 3.{{ i }}",
{%- endfor %}
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
{%- if license_classifier %}
    "{{ license_classifier }}",
{%- endif %}
]
requires-python = ">= {{ python_requires | join(".") }}"
dynamic = ["version"]
dependencies = [
    "salt>={{ salt_version }}",
]

[project.readme]
file = "README.md"
content-type = "text/markdown"

[project.urls]
Homepage = "{{ url }}"
{%- if docs_url %}
Documentation = "{{ docs_url }}"
{%- endif %}
{%- if source_url %}
Source = "{{ source_url }}"
{%- endif %}
{%- if tracker_url %}
Tracker = "{{ tracker_url }}"
{%- endif %}

[project.optional-dependencies]
changelog = ["towncrier==22.12.0"]
dev = [
    "nox",
    "pre-commit>=2.4.0",
    "pylint",
    "saltpylint",
]
docs = [
  "sphinx",
  "sphinx-prompt",
  "sphinxcontrib-spelling",
  "sphinx-copybutton",
  "towncrier==22.12.0",
  "sphinxcontrib-towncrier",
  "myst_parser",
  "furo",
  "sphinx-inline-tabs",
]
docsauto = ["sphinx-autobuild"]
lint = [
    "pylint",
    "saltpylint",
]
tests = [
    "pytest>=7.2.0",
{%- if test_containers %}
    "pytest-salt-factories>=1.0.0; sys_platform == 'win32'",
    "pytest-salt-factories[docker]>=1.0.0; sys_platform != 'win32'",
{%- else %}
    "pytest-salt-factories>=1.0.0",
{%- endif %}
]

[project.entry-points."salt.loader"]
"{{ package_namespace_pkg }}{{ project_name }}" = "{{ namespaced_package_pkg }}"

[tool.setuptools]
zip-safe = false
include-package-data = true
platforms = ["any"]

[tool.setuptools.packages.find]
where = ["src"]
exclude = ["tests"]

[tool.distutils.bdist_wheel]
# Use this option if your package is pure-python
universal = 1

[tool.distutils.sdist]
owner = "root"
group = "root"

[tool.build_sphinx]
source_dir = "docs"
build_dir = "build/sphinx"

[tool.black]
line-length = 100

[tool.isort]
force_single_line = true
skip = ["src/{{ namespaced_package_path }}/__init__.py"]
profile = "black"
line_length = 100

[tool.towncrier]
package = "{{ namespaced_package_pkg }}"
filename = "CHANGELOG.md"
template = "changelog/.template.jinja"
directory = "changelog/"
start_string = "# Changelog\n"
underlines = ["", "", ""]
title_format = "## {version} ({project_date})"
{%- if tracker_url %}
issue_format = "[#{issue}]({{ tracker_url }}/{issue})"
{%- endif %}

[[tool.towncrier.type]]
directory = "removed"
name = "Removed"
showcontent = true

[[tool.towncrier.type]]
directory = "deprecated"
name = "Deprecated"
showcontent = true

[[tool.towncrier.type]]
directory = "changed"
name = "Changed"
showcontent = true

[[tool.towncrier.type]]
directory = "fixed"
name = "Fixed"
showcontent = true

[[tool.towncrier.type]]
directory = "added"
name = "Added"
showcontent = true

[[tool.towncrier.type]]
directory = "security"
name = "Security"
showcontent = true
